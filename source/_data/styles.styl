//博客内容透明化
//文章内容的透明度设置
body {
    background:url(/images/bg.png);
    background-repeat: no-repeat;
    background-attachment:fixed; //不重复
    background-size: cover;      //填充
    background-position:50% 50%;
}

.content-wrap {
  opacity: 0.8;
}

//侧边框的透明度设置
.sidebar {
  opacity: 0.8;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255,255,255,0.8);
}

//搜索框（local-search）的透明度设置
.popup {
  opacity: 0.9;
}

// 定理块样式
.theorem-block {
    border: 2px solid #3498db;
    background-color: #ecf9ff;
    padding: 10px;
    margin: 15px 0;
    border-radius: 5px;
}
  
// 定理标题样式 
.theorem-title {
    font-weight: bold;
    color: #2980b9;
    margin-bottom: 10px; // /* 与内容分隔 */
    text-align: left; // /* 标题对齐方式，可修改为 center 居中 */
    display: block; // /* 确保单独一行 */
    font-size: 1.2em; // /* 可调整字体大小 */
}
  
// /* 定理内容样式 */
.theorem-content {
    margin-top: 5px;
    color: #333;
    line-height: 1.5; // /* 提高内容的可读性 */
}

// /* 引理块样式 */
.lemma-block {
    border: 2px solid #f39c12;
